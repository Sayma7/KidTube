<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/fullscreen_player"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/black_75_percent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/btnPreviousPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_skip_previous_brown_100_24dp" />
        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPreviousPlayer"
            android:padding="8dp"
            android:src="@drawable/ic_play_circle_outline_red_400_24dp" />
        <ImageView
            android:id="@+id/btnNextPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/btnPlay"
            android:src="@drawable/ic_skip_next_brown_100_24dp" />
        <ImageView
            android:id="@+id/btnReplayPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNextPlayer"
            android:padding="8dp"
            android:src="@drawable/ic_replay_brown_200_24dp" />
        <ImageView
            android:id="@+id/btnVolumePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnReplayPlayer"
            android:padding="8dp"
            android:src="@drawable/ic_volume_up_brown_200_24dp" />
        <ImageView
            android:id="@+id/btnScreenLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnVolumePlayer"
            android:padding="8dp"
            android:src="@drawable/lock" />
    </RelativeLayout>

</RelativeLayout>